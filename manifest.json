{
  "manifest_version": 2,

  "name": "Radyo Eksen",
  "short_name": "Radyo Eksen",
  "description": "Başka bir program ya da yeni bir sekme açmadan tek tıkla Radyo Eksen dinle.",
  "version": "1.0.7",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "96": "icon_96.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "https://radioeksen.com/",
    "https://*.radioeksen.com/"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  }
}